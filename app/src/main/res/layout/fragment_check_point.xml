<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/layout_check_point_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/point_1"
        app:layout_constraintTop_toTopOf="@+id/point_2"
        app:layout_constraintBottom_toBottomOf="@+id/point_2"
        app:layout_constraintRight_toLeftOf="@+id/point_2"
        android:layout_marginLeft="0dp"
        />
    <include layout="@layout/layout_check_point_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/point_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <include
        android:id="@+id/point_3"
        layout="@layout/layout_check_point_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/point_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/point_2"
        app:layout_constraintBottom_toBottomOf="@+id/point_2"
         />

</android.support.constraint.ConstraintLayout>